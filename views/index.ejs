<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%- include('./components/head') %>
  </head>

  <body>
    <%- include('./components/nav') %> <% if (jogoProcurar.length == 0) { %>
    <header>
      <img
        src="https://i.pinimg.com/originals/aa/d7/68/aad7688c0e3b1ac517466a3b435848c3.jpg"
        alt="banner"
      />
    </header>
    <% } %>

    <main>
      <section id="cards">
        <% if (mensagem != "") { %> 
        <%- include('./components/alerts') %> 
        <% } %> 
        <% if (jogoProcurar.length == 0) { %>
        <div class="titulo">
          <h2>
            Lista de Jogos
            <img class="joystick" src="/img/joystick2.png" alt="joystick" />
          </h2>
        </div>
        <% } else { %>
        <div class="titulo">
          <h2>
            Resultado da Pesquisa
            <img class="joystick" src="/img/joystick2.png" alt="joystick" />
          </h2>
        </div>
        <% } %> 
        <% if (jogoProcurar.length == 0) { %>
        <% jogos.forEach((jogo)=> { %>
        <%- include ('./components/cards' , {jogo: jogo}) %> 
        <% }) %>
      </section>

      <section id="cards">
        <% } else { %> 
        <%jogoProcurar.forEach((jogo)=> { %>
        <%- include ('./components/cards' , {jogo: jogo}) %> 
        <% }) %>
      </section>
      <% } %>
    </main>

    <% if (jogoPut != null) { %> <%- include('./components/modalPut') %> <% } %>
    <% if (jogoDel != null) { %> <%- include('./components/modalDel') %> <% } %>
    <div class="topo"></div>
    <div class="base"></div>
    <%- include('./components/footer') %>

    <script src="/script.js"></script>
  </body>
</html>
